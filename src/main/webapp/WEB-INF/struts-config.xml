<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>


    </form-beans>

    <action-mappings>
        <action path="/hai" name="Registration" validate="true" type="com.loginstruts.controller.RegistrationController"
                input="/Registration.jsp">
            <forward name="success" path="/success.jsp"/>
            <forward name="failure" path="/failure.jsp"/>
        </action>



        <action path="/set" type="com.loginstruts.controller.SetController">
            <forward name="success" path="/success.jsp"/>
            <forward name="failure" path="/failure.jsp"/>
        </action>


        <action path="/otm" type="com.loginstruts.controller.OneToManyController">
            <forward name="success" path="/success.jsp"/>
            <forward name="failure" path="/failure.jsp"/>
        </action>


        <action path="visitor/login" forward="/jsp/visitor/Login.jsp"/>


        <action path="/visitor/login"
                type="com.MinicareStruts"/>




    </action-mappings>

    <message-resources parameter="resources/messages"/>

</struts-config>