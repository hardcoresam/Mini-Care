<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.MinicareStruts.model.Conversation" table="conversation">
        <id name="conversationId" column="ConversationId" type="int">
            <generator class="increment"/>
        </id>

        <!--Now how to map The seekerId and sitterId here -->

        <many-to-one name="seeker" class="com.MinicareStruts.model.Seeker" column="SeekerId" not-null="true"/>
        <many-to-one name="sitter" class="com.MinicareStruts.model.Sitter" column="SitterId" not-null="true"/>

    </class>
</hibernate-mapping>
